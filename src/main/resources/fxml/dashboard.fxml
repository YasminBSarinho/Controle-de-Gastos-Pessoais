<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ifpb.gestaodegastos.controllers.DashboardController">
    <children>
        <Button layoutX="176.0" layoutY="529.0" mnemonicParsing="false" onAction="#addRegistro" prefHeight="39.0" prefWidth="241.0" text="Adicionar Registros">
            <font><Font size="18.0" /></font>
        </Button>

        <Button layoutX="443.0" layoutY="529.0" mnemonicParsing="false" onAction="#paraRegistros" prefHeight="39.0" prefWidth="182.0" text="Ver Registros">
            <font><Font size="18.0" /></font>
        </Button>

        <Button layoutX="722.0" layoutY="38.0" mnemonicParsing="false" onAction="#logout" text="Sair" />

        <Label fx:id="textoUsuario" layoutX="96.0" layoutY="35.0" prefHeight="31.0" prefWidth="609.0" text="Usuário:">
            <font><Font size="21.0" /></font>
        </Label>

        <Label fx:id="textoSaldo" layoutX="96.0" layoutY="86.0" prefHeight="31.0" prefWidth="568.0" text="Saldo:">
            <font><Font size="21.0" /></font>
        </Label>

        <Label fx:id="labelOrcamento" layoutX="96.0" layoutY="130.0" prefHeight="25.0" prefWidth="560.0" text="Orçamento: R$0.0">
            <font><Font size="16.0" /></font>
        </Label>

        <TextField fx:id="campoOrcamento" layoutX="96.0" layoutY="160.0" prefWidth="150.0" promptText="Digite o orçamento" />

        <Button layoutX="260.0" layoutY="160.0" mnemonicParsing="false" onAction="#definirOrcamento" text="Definir Orçamento" />

        <Button layoutX="400.0" layoutY="160.0" mnemonicParsing="false" onAction="#desativarOrcamento" text="Desativar Orçamento" />

        <BarChart fx:id="barChart" layoutX="52.0" layoutY="200.0" prefHeight="300.0" prefWidth="670.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
    </children>
</AnchorPane>
